<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_rromp_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="25dp" >

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dip"
        android:paddingTop="20dip" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:paddingTop="5dip"
            android:text="请选择支付方式"
            android:textColor="#4197d2"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/line_rromp" />

    <RelativeLayout
        android:id="@+id/zfb_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:visibility="visible"
        android:tag="zfb_app" >

        <ImageView
            android:id="@+id/zfb_imageView1"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/zfb" />

        <TextView
            android:id="@+id/zfbpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/zfb_imageView1"
            android:gravity="center"
            android:padding="8dp"
            android:text="支付宝支付"
            android:textColor="#666666"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/zfb_imageView2"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/arrow" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/zfb_imageView1"
            android:background="@drawable/line_rromp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yl_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:visibility="visible" 
        android:tag="yl_app" >

        <ImageView
            android:id="@+id/yl_imageView1"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/yl" />

        <TextView
            android:id="@+id/ylpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/yl_imageView1"
            android:gravity="center"
            android:padding="8dp"
            android:text="银联支付"
            android:textColor="#666666"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/yl_imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/arrow" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/yl_imageView1"
            android:background="@drawable/line_rromp" />
    </RelativeLayout>

</LinearLayout>